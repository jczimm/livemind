{
  "name": "livemind",
  "version": "0.0.1",
  "author": "Jacob Zimmerman (jczimm) <jczimm@jczimm.com>",
  "license": "MIT",
  "main": "index.js",
  "description": "the hyper-ephemeral thinking pad",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "clean:dist": "npx del dist",
    "clean:releases": "npx del releases",
    "clean": "npm run clean:dist && npm run clean:releases",
    "build": "echo \"~~ No build step ~~\" && exit 0",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:all": "npm run clean:releases && npm run build && electron-builder -mwl",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "start-web": "parcel serve ./index.html"
  },
  "dependencies": {
    "electron-titlebar": "^0.0.3"
  },
  "devDependencies": {
    "del-cli": "^1.1.0",
    "electron": "^3.0.10",
    "electron-builder": "^20.36.2",
    "eslint": "5.3.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.14.0",
    "parcel": "^2.0.0-beta.1"
  },
  "engines": {
    "node": ">=8.12.0"
  },
  "build": {
    "appId": "com.jczimm.livemind",
    "copyright": "Copyright Â© 2018-present Jacob Zimmerman",
    "files": [
      "index.js",
      "config.js",
      "index.html",
      "build/icon.*"
    ],
    "directories": {
      "output": "releases"
    },
    "mac": {
      "target": [
        "dmg",
        "pkg"
      ],
      "category": "public.app-category.utilities",
      "type": "distribution"
    },
    "dmg": {
      "iconSize": 160,
      "iconTextSize": 12,
      "window": {
        "width": 660,
        "height": 400
      },
      "contents": [
        {
          "x": 180,
          "y": 170,
          "type": "file"
        },
        {
          "x": 480,
          "y": 170,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "pkg": {
      "license": "LICENSE"
    },
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ]
    },
    "nsis": {
      "license": "LICENSE",
      "warningsAsErrors": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap"
      ],
      "category": "Utility"
    },
    "snap": {
      "grade": "stable",
      "summary": "the hyper-ephemeral thinking pad"
    },
    "publish": {
      "provider": "github",
      "owner": "jczimm",
      "releaseType": "release"
    }
  }
}
